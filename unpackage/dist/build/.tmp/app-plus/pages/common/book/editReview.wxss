.edit-review .star {
  text-align: center;
  margin-top: 40rpx;
}
.edit-review .star .five-star {
    display: inline-block;
}
.edit-review .star .text {
    width: 100%;
    font-size: 28rpx;
    color: #999;
    padding: 20rpx 0;
}
.edit-review .content {
  width: 96%;
  margin: 0 2%;
  font-size: 32rpx;
}
.edit-review .content input {
    border-bottom: 1rpx solid #efefef;
    padding: 10rpx 20rpx;
}
.edit-review .content textarea {
    border: 1rpx solid #eee;
    border-radius: 12rpx;
    margin-top: 20rpx;
    width: 100%;
    padding: 20rpx;
    font-size: 30rpx;
    box-sizing: border-box;
}
.edit-review .content textarea :focus {
      caret-color: #BD3037;
}
.edit-review .content .num {
    width: 100%;
    text-align: right;
    color: #999;
}
.edit-review .submit {
  width: 280rpx;
  height: 80rpx;
  background-color: #BD3037;
  color: #fff;
  text-align: center;
  line-height: 80rpx;
  border-radius: 50rpx;
  border: none;
  margin: 30rpx auto;
  font-size: 32rpx;
}

