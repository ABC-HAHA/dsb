.comment-detail {
  width: 100%;
  background-color: #fff;
}
.comment-detail .cred {
    color: red !important;
}
.comment-detail .appraise {
    width: 100%;
}
.comment-detail .appraise .ap-title {
      width: 90%;
      padding: 20rpx 0;
      margin: 0 auto;
      line-height: 40rpx;
      border-bottom: 1rpx solid #f0f0f0;
      font-size: 32rpx;
      color: #515151;
}
.comment-detail .appraise .ap-title .icon-edit {
        color: red;
        font-size: 28rpx;
}
.comment-detail .appraise .ap-no-content {
      width: 100%;
      height: 100rpx;
      text-align: center;
      line-height: 100rpx;
      font-size: 32rpx;
      color: #515151;
}
.comment-detail .ap-content {
    width: 90%;
    margin: 0 auto;
}
.comment-detail .ap-content .item {
      width: 100%;
      padding: 20rpx 0;
      border-bottom: 1rpx solid #eee;
}
.comment-detail .ap-content .item .f-16 {
        font-size: 32rpx;
        color: #333;
}
.comment-detail .ap-content .item .f-14 {
        font-size: 28rpx;
        color: #666;
}
.comment-detail .ap-content .item .f-12 {
        font-size: 24rpx;
        color: #999;
        margin-left: 10rpx;
}
.comment-detail .ap-content .item .ac-title {
        overflow: hidden;
        line-height: 60rpx;
}
.comment-detail .ap-content .item .ac-title .logo {
          width: 80rpx;
          height: 60rpx;
}
.comment-detail .ap-content .item .ac-title .logo image {
            width: 60rpx;
            height: 60rpx;
            border-radius: 50%;
}
.comment-detail .ap-content .item .ac-info {
        overflow: hidden;
        margin-top: 20rpx;
}
.comment-detail .ap-content .item .ac-info .icon {
          margin-left: 30rpx;
}
.comment-detail .ap-content .item .acc-title {
        margin: 10rpx 0;
        font-weight: 600;
}
.comment-detail .ap-content .item .acc-content {
        color: #515151;
        margin: 20rpx 0;
}
.comment-detail .footer {
    width: 100%;
    padding: 20rpx;
    -webkit-box-sizing: border-box;
            box-sizing: border-box;
    background-color: #fff;
    border-top: 1rpx solid #eee;
    position: fixed;
    left: 0;
    bottom: 0;
    z-index: 99;
}
.comment-detail .footer textarea {
      display: inline-block;
      width: 86%;
      height: 60rpx;
      line-height: 30rpx;
      font-size: 28rpx;
      caret-color: #BD3037;
      padding: 10rpx 20rpx;
      -webkit-box-sizing: border-box;
              box-sizing: border-box;
      background-color: #f0f0f0;
      border-radius: 10rpx;
}
.comment-detail .footer .submit {
      width: 14%;
      height: 60rpx;
      display: inline-block;
      line-height: 60rpx;
      font-size: 60rpx;
      color: #BD3037;
      border: none;
      outline: none;
      padding: 0;
      background-color: transparent;
      text-align: center;
}
.comment-detail .footer .submit::after {
        border: none;
}

