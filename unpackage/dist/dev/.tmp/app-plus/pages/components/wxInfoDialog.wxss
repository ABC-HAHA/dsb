.wx-info-dialog {
  width: 100%;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 98;
  background: rgba(0, 0, 0, 0.3);
}
.wx-info-dialog .dialog-content {
    width: 80%;
    position: absolute;
    top: 30vh;
    left: 10%;
    z-index: 99;
    border-radius: 20rpx;
    background-color: #fff;
}
.wx-info-dialog .dialog-content .title {
      width: 100%;
      line-height: 90rpx;
      text-align: center;
      font-size: 36rpx;
      font-weight: 600;
      border-bottom: 1rpx solid #eee;
}
.wx-info-dialog .dialog-content .intro {
      font-size: 28rpx;
      color: #515151;
      line-height: 60rpx;
      padding: 20rpx 30rpx;
}
.wx-info-dialog .dialog-content .dialog-footer {
      width: 100%;
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      -webkit-box-orient: horizontal;
      -webkit-box-direction: normal;
      -webkit-flex-flow: row nowrap;
              flex-flow: row nowrap;
      -webkit-box-pack: justify;
      -webkit-justify-content: space-between;
              justify-content: space-between;
}
.wx-info-dialog .dialog-content .dialog-footer .btn {
        width: 50%;
        height: 88rpx;
        line-height: 88rpx;
        text-align: center;
        border: none;
}
.wx-info-dialog .dialog-content .dialog-footer .cancle {
        color: #999;
        background-color: #f9f9f9;
        border-radius: 0 0 0 20rpx;
        border-top: 1rpx solid #eee;
}
.wx-info-dialog .dialog-content .dialog-footer .cancle::after {
          border: none;
}
.wx-info-dialog .dialog-content .dialog-footer .sure {
        color: #fff;
        background-color: #09bb07;
        border-radius: 0 0 20rpx 0;
}
.wx-info-dialog .dialog-content .dialog-footer .sure::after {
          border: none;
}

